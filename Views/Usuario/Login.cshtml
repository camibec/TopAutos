@{
    ViewData["Title"] = "Iniciar sesion";
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Usuario" asp-action="CheckUsuario">

            <div class="form-group">
                <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Email">
            </div>

            <div class="form-group">
                <input type="password" class="form-control" id="inputClave" placeholder="Clave">
            </div>

            <button type="submit" class="btn btn-rojo">Iniciar sesion</button>
        </form>

        <div class="registro" text-rigth>
            <div id="registrar" class="form-text text-rojo" style="color: red;"><a href="/Usuario/Create">Registrarse</a></div>
        </div>
    </div>
</div>
