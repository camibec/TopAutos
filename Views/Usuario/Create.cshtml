@model TopAutos.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<div class="wrapper-register">
    <div class="box-register">

        <h2>Registro</h2>

        <form class="form-register" asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group d-none">
                <label asp-for="Rol" class="control-label"></label>
                <input asp-for="Rol" class="form-control" value="0" />
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">E-mail</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clave" class="control-label">Password</label>
                <input asp-for="Clave" class="form-control" required />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-rojo"/>
            </div>

        </form>

        <div class="back-login">
            <a asp-action="Login">Volver al login</a>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
